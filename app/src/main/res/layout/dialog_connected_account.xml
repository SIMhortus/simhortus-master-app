<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:paddingHorizontal="30dp"
    android:background="@drawable/bg_rounded"
    android:layout_height="wrap_content">




    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="Are you sure you want to unlink your device "/>

    <TextView
        android:id="@+id/displayID"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="Device ID: put text here"/>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNeg"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Cancel"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPos"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Yes"
            />

    </LinearLayout>


</LinearLayout>