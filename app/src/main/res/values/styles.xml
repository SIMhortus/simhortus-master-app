<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="SubFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/colorSub</item>
        <item name="android:backgroundTint">@color/colorSub</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="hyperlink" parent="Theme.AppCompat.Light">
        <item name="android:textColor" >@color/hyperlink</item>
        <item name="android:padding" >10dp</item>
    </style>

    <style name="DialogTheme" parent="MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#641111</item>
        <item name="colorPrimaryDark">#FFF</item>
        <item name="android:borderlessButtonStyle">@color/transparent</item>
    </style>
</resources>
